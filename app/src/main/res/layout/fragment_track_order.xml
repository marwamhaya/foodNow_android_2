<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Map View (Full Screen) -->
    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Top Connection Status (Floating) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardConnectionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:visibility="gone"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#FF9800">

        <TextView
            android:id="@+id/tvConnectionStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connecting..."
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>
    </androidx.cardview.widget.CardView>

    <!-- Recenter Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnRecenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomSheetCard"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@android:drawable/ic_menu_mylocation"
        app:tint="#FFFFFF"
        app:backgroundTint="#FF6200"
        app:elevation="6dp"
        app:borderWidth="0dp"/>

    <!-- Bottom Info Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottomSheetCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="0dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="16dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Handle Bar -->
            <View
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_gravity="center_horizontal"
                android:background="#E0E0E0"
                android:layout_marginBottom="16dp"/>

            <!-- ETA Header -->
            <TextView
                android:id="@+id/tvETAHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arrives in -- minutes"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="4dp"/>

            <!-- Restaurant/Order Info -->
            <TextView
                android:id="@+id/tvRestaurantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Restaurant Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvOrderAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: -- DH"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="16dp"/>
                
            <!-- Client Location (requested by user to be visible) -->
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">
                
                 <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_menu_myplaces"
                    app:tint="#4CAF50"
                    android:layout_marginEnd="8dp"/>
                    
                 <TextView
                    android:id="@+id/tvClientAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Location"
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:singleLine="true"
                    android:ellipsize="end"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0"
                android:layout_marginBottom="16dp"/>

            <!-- Driver Info Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Avatar -->
                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F5F5F5">
                    <ImageView
                        android:id="@+id/ivDriverAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@android:drawable/ic_menu_my_calendar"
                        android:scaleType="centerCrop"
                        app:tint="#999999"
                        android:padding="8dp"/>
                </androidx.cardview.widget.CardView>

                <!-- Name & Role -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/tvDriverName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Searching driver..."
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvDriverRole"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery Partner"
                        android:textColor="#666666"
                        android:textSize="12sp"/>
                </LinearLayout>

                <!-- Actions -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Call Button -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnCallDriver"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="20dp"
                        app:cardBackgroundColor="#F5F5F5"
                        app:cardElevation="0dp"
                        android:layout_marginEnd="12dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/sym_action_call"
                            android:layout_gravity="center"
                            app:tint="#000000"/>
                    </androidx.cardview.widget.CardView>

                    <!-- Chat Button (Orange) -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnChatDriver"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="20dp"
                        app:cardBackgroundColor="#FF6200"
                        app:cardElevation="2dp">
                         <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/sym_action_chat"
                            android:layout_gravity="center"
                            app:tint="#FFFFFF"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
