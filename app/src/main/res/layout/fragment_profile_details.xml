<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/uber_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header with Back Button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/uber_black"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/uber_black"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <!-- Profile Information Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal Information"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/uber_black"
                    android:layout_marginBottom="16dp"/>

                <!-- Full Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:textSize="12sp"
                    android:textColor="@color/uber_text_secondary"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvProfileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textSize="16sp"
                    android:textColor="@color/uber_black"
                    android:layout_marginBottom="16dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/uber_divider"
                    android:layout_marginBottom="16dp"/>

                <!-- Email -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="12sp"
                    android:textColor="@color/uber_text_secondary"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvProfileEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="user@email.com"
                    android:textSize="16sp"
                    android:textColor="@color/uber_black"
                    android:layout_marginBottom="16dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/uber_divider"
                    android:layout_marginBottom="16dp"/>

                <!-- Phone (if available) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textSize="12sp"
                    android:textColor="@color/uber_text_secondary"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvProfilePhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Not provided"
                    android:textSize="16sp"
                    android:textColor="@color/uber_black"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Change Password Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnChangePassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Change Password"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/uber_orange"
            app:cornerRadius="28dp"
            app:icon="@drawable/ic_lock"
            app:iconTint="@color/white"
            app:iconGravity="textStart"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</ScrollView>
