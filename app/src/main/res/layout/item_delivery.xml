<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvDeliveryId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery #123"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvDeliveryStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: READY_FOR_PICKUP"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvRestaurantInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From: Resto Name\nAddr: 123 Street"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvClientInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To: Client Name\nAddr: 456 Avenue"
            android:layout_marginTop="8dp" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvRatingComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textColor="#555555"
            android:layout_marginTop="4dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pick Up Order"
            android:layout_marginTop="12dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
