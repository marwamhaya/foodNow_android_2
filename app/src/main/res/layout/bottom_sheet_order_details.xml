<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_bottom_sheet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_add_24"
                android:rotation="45" 
                app:tint="@color/black"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Details"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Order Info Row (Mimicking Item Detail Info) -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardRestaurantImage"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        
                        <!-- Restaurant Image -->
                        <ImageView
                            android:id="@+id/ivRestaurantImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/placeholder_food"
                            android:background="@color/background"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tvRestaurantName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Restaurant Name"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toEndOf="@id/cardRestaurantImage"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <!-- Restaurant Category -->
                    <TextView
                        android:id="@+id/tvRestaurantCategory"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Category"
                        android:textSize="12sp"
                        android:textColor="@color/uber_text_secondary"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/cardRestaurantImage"
                        app:layout_constraintTop_toBottomOf="@id/tvRestaurantName"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/tvOrderDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Date: 12 Oct 2023"
                        android:textSize="12sp"
                        android:textColor="@color/uber_text_secondary"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/cardRestaurantImage"
                        app:layout_constraintTop_toBottomOf="@id/tvRestaurantCategory"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <!-- Status Badge -->
                    <TextView
                        android:id="@+id/tvOrderStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pending"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:background="@drawable/bg_order_status"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                     
                     <!-- Hidden Order ID -->
                     <TextView
                        android:id="@+id/tvOrderId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/uber_divider"
                    android:layout_marginVertical="24dp"/>

                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Items"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"/>

                <!-- Order Items List -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvOrderItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"/>
                
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- Bottom Total Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@color/white"
            android:elevation="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                 android:layout_marginBottom="16dp">
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total Amount"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                
                <TextView
                    android:id="@+id/tvTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="38.98 DH"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/uber_orange"/>
            </LinearLayout>

            <!-- Buttons container -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <Button
                    android:id="@+id/btnTrackOrder"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Track Order"
                    android:backgroundTint="@color/uber_black"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    app:cornerRadius="28dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnRateOrder"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Rate Order"
                    android:backgroundTint="@color/uber_black"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    app:cornerRadius="28dp"
                    android:visibility="gone"/>
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
