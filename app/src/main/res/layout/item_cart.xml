<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="12dp"
    android:paddingHorizontal="16dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivCartItemImage"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_food"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.MaterialComponents.MediumComponent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tvCartItemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Item Name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@+id/ivCartItemImage"
        app:layout_constraintTop_toTopOf="@+id/ivCartItemImage"
        app:layout_constraintEnd_toStartOf="@+id/layoutQuantity" />

    <!-- Metadata Row (Dummy for now to match design) -->
    <LinearLayout
        android:id="@+id/layoutMetadata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/ivCartItemImage"
        app:layout_constraintTop_toBottomOf="@+id/tvCartItemName">
        
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_cart" 
            app:tint="@color/text_secondary"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="999+ | "
            android:textSize="10sp"
            android:textColor="@color/text_secondary"
            android:layout_gravity="center_vertical"/>
             
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_star_filled"
            app:tint="@color/text_secondary" 
            android:layout_gravity="center_vertical"/>
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="220"
            android:textSize="10sp"
            android:textColor="@color/text_secondary"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    
    <!-- Options (Hidden or below metadata) -->
    <TextView
         android:id="@+id/tvCartItemOptions"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:textSize="10sp"
         android:textColor="@color/text_secondary"
         android:text="Option 1"
         android:layout_marginStart="16dp"
         android:maxLines="1"
         android:ellipsize="end"
         app:layout_constraintStart_toEndOf="@+id/ivCartItemImage"
         app:layout_constraintEnd_toStartOf="@+id/layoutQuantity"
         app:layout_constraintTop_toBottomOf="@+id/layoutMetadata" />


    <TextView
        android:id="@+id/tvCartItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0.00"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FF6D00" 
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/ivCartItemImage"
        app:layout_constraintBottom_toBottomOf="@+id/ivCartItemImage"/>
    <!-- Using #FF6D00 orange specific to match design roughly, or @color/primary if it is orange -->

    <!-- Quantity Controls -->
    <LinearLayout
        android:id="@+id/layoutQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tvCartItemPrice"
        app:layout_constraintTop_toTopOf="@+id/tvCartItemPrice">

        <ImageButton
            android:id="@+id/btnDecreaseQty"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_remove"
            android:background="@drawable/bg_circle_gray"
            app:tint="@color/text_primary"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/tvCartItemQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginHorizontal="8dp"/>

        <ImageButton
            android:id="@+id/btnIncreaseQty"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_add"
            android:background="@drawable/bg_circle_orange"
            app:tint="@color/white"
            android:padding="4dp"/>
    </LinearLayout>
    
    <ImageButton
        android:id="@+id/btnRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/> 
    <!-- Keeping btnRemove id but hiding it or moving it if design needs, design doesn't show explicit delete, maybe 'decrease to 0' deletes -->

</androidx.constraintlayout.widget.ConstraintLayout>
